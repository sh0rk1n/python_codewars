# I love you, a little , a lot, passionately ... not at all
def maps(nb_petals):
  n = nb_petals % 6
  if n==1: # 7%6
    return "I love you"
  if n==2: # 8%6
    return "a little"
  if n==3: # 9%6
    return "a lot"
  if n==4: # 10%6
    return "passionately"
  if n==5: # 11%6
    return "madly"
  if n==0: # 12%6
    return "not at all"

a = int(input("Enter the digit of petals: "))
print(maps(a))

